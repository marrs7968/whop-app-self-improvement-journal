// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id
  name         String?
  whopUserId   String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  Drafts       Draft[]
  Submissions  Submission[]

  @@map("users")
}

model Draft {
  id           String   @id @default(cuid())
  userId       String
  weekStartISO String   // ISO date for the Sunday that starts the week
  sectionKey   String   // e.g., "daily-rent", "weigh-in", "reflection"
  dayIndex     Int?     // 0..6 for Daily Rent sub-sections; null otherwise
  text         String?
  mediaIds     String   // JSON array of Whop asset IDs (images/videos)
  channelId    String?  // Whop channel to submit to
  updatedAt    DateTime @updatedAt

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, weekStartISO, sectionKey, dayIndex])
  @@map("drafts")
}

model Submission {
  id           String   @id @default(cuid())
  userId       String
  weekStartISO String
  sectionKey   String
  dayIndex     Int?
  text         String?
  mediaIds     String   // JSON array of Whop asset IDs
  channelId    String?
  submittedAt  DateTime @default(now())

  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("submissions")
}